<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="10.0dip" >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="1.0dip"
                android:shrinkColumns="0"
                android:stretchColumns="0" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:paddingBottom="10.0dip"
                    android:paddingTop="10.0dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:drawableLeft="@drawable/women1"
                        android:drawableRight="@drawable/jiji"
                        android:drawablePadding="10.0dip"
                        android:gravity="center"
                        android:text="制作团队"
                        android:textColor="#ff333333"
                        android:textSize="20.0sp"
                        android:id="@+id/about_us"

                        />
                </TableRow>

                <View
                    android:layout_height="0.5dip"
                    android:background="#000000" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:paddingBottom="10.0dip"
                    android:paddingTop="10.0dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:drawableLeft="@drawable/banben1"
                        android:drawableRight="@drawable/jiji"
                        android:drawablePadding="10.0dip"
                        android:gravity="center"
                        android:text="设备信息"
                        android:textColor="#ff333333"
                        android:textSize="20.0sp"
                        android:id="@+id/type_news"
                        />
                </TableRow>
                <View

                    android:layout_height="0.5dip"

                    android:background="#000000" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:paddingBottom="10.0dip"
                    android:paddingTop="10.0dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:drawableLeft="@drawable/gengxin1"
                        android:drawableRight="@drawable/jiji"
                        android:drawablePadding="10.0dip"
                        android:gravity="center"
                        android:text="版本更新"
                        android:textColor="#ff333333"
                        android:textSize="20.0sp"
                        android:id="@+id/update"
                        />
                </TableRow>

                <View
                    android:layout_height="0.5dip"
                    android:background="#000000" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:paddingBottom="10.0dip"
                    android:paddingTop="10.0dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:drawableLeft="@drawable/shuoming1"
                        android:drawableRight="@drawable/jiji"
                        android:drawablePadding="10.0dip"
                        android:gravity="center"
                        android:text="使用教程"
                        android:textColor="#ff333333"
                        android:textSize="20.0sp"
                        android:id="@+id/introduce"
                        />
                </TableRow>
                <View
                    android:layout_height="0.5dip"
                    android:background="#000000" />
            </TableLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>